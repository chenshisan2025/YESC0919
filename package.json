{
  "name": "yescoin-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 8080",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:all": "./scripts/run-tests.sh",
    "test:frontend": "./scripts/run-tests.sh --frontend",
    "test:backend": "./scripts/run-tests.sh --backend",
    "test:integration": "./scripts/run-tests.sh --integration",
    "deploy:contracts": "npx hardhat run scripts/deploy.js",
    "deploy:testnet": "npx hardhat run scripts/deploy.js --network bscTestnet",
    "deploy:mainnet": "npx hardhat run scripts/deploy.js --network bscMainnet",
    "start:backend": "./scripts/start-backend.sh",
    "start:full": "concurrently \"npm run start:backend\" \"npm run dev\""
  },
  "dependencies": {
    "@tanstack/react-query": "^5.89.0",
    "@web3modal/wagmi": "^5.1.11",
