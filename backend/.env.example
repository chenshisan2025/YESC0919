# Redis Configuration (Optional, for caching)
REDIS_URL="redis://localhost:6379"

# Email Configuration (Optional, for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
