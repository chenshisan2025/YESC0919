# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/yescoin_db?schema=public"

# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# JWT Secret for authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Blockchain Configuration
BSC_RPC_URL="https://bsc-dataseed1.binance.org/"
BSC_TESTNET_RPC_URL="https://data-seed-prebsc-1-s1.binance.org:8545/"
PRIVATE_KEY="your-wallet-private-key-without-0x-prefix"

# Smart Contract Addresses (BSC Mainnet)
TOKEN_CONTRACT_ADDRESS="0x..."
AIRDROP_CONTRACT_ADDRESS="0x..."
NFT_CONTRACT_ADDRESS="0x..."

# Smart Contract Addresses (BSC Testnet)
TOKEN_CONTRACT_ADDRESS_TESTNET="0x..."
AIRDROP_CONTRACT_ADDRESS_TESTNET="0x..."
NFT_CONTRACT_ADDRESS_TESTNET="0x..."

# Airdrop Configuration
AIRDROP_AMOUNT="10000000" # 10M YES tokens per user
REFERRAL_TOKEN_REWARD="1000000" # 1M YES tokens per referral
REFERRAL_BNB_REWARD="0.005" # 0.005 BNB per referral

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-key"

# Logging Configuration
LOG_LEVEL="info"
